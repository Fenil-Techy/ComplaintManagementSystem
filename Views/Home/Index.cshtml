@{
    // FIX: Setting Layout = null prevents the default ASP.NET Core navigation bar
    // and overall page structure from overlaying this custom landing page.
    Layout = null;
    ViewData["Title"] = "Welcome";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Campus Complaint Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }
        .landing-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 900px;
            padding: 20px;
        }
        .welcome-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            width: 100%;
        }
        .welcome-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            text-align: center;
            width: 100%;
        }
        .welcome-header h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .welcome-body {
            padding: 50px 40px;
        }
        .role-selection {
            display: flex;
            gap: 30px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 40px;
        }
        .role-card {
            flex: 1;
            max-width: 300px;
            background: white;
            border: 3px solid #e0e0e0;
            border-radius: 15px;
            padding: 40px 30px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            margin-bottom: 30px;
            /* Added cursor pointer to indicate interaction */
            cursor: pointer; 
        }
        .role-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.2);
            border-color: #667eea;
        }
        .role-card .icon {
            font-size: 80px;
            margin-bottom: 20px;
            display: block;
        }
        .role-card.student .icon {
            color: #667eea;
        }
        .role-card.admin .icon {
            color: #764ba2;
        }
        .role-card h3 {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 15px;
        }
        .role-card p {
            color: #666;
            margin-bottom: 25px;
        }
        .role-card .btn {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 10px;
        }
        .role-card.student .btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
        }
        .role-card.admin .btn {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border: none;
            color: white;
        }
        .features {
            margin-top: 40px;
            text-align: center;
        }
        .features h4 {
            color: #667eea;
            margin-bottom: 20px;
        }
        .feature-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: center;
        }
        .feature-badge {
            background: #f0f0f0;
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 0.9rem;
            color: #333;
        }

        /* Media Query for smaller screens */
        @@media (max-width: 768px) {
            .welcome-header h1 {
                font-size: 1.8rem;
            }
            .role-selection {
                flex-direction: column;
            }
            .role-card {
                max-width: 100%;
            }
            .role-card.student .btn,
            .role-card.admin .btn {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="landing-container">
        <div class="welcome-card">
            <div class="welcome-header">
                <i class="bi bi-megaphone-fill" style="font-size: 60px;"></i>
                <h1>Campus Complaint Management System</h1>
                <p class="mb-0">Your Voice Matters - Report Issues, Track Progress</p>
            </div>
            
            <div class="welcome-body">
                <h2 class="text-center mb-4">Welcome! Please Select Your Role</h2>
                
                <div class="role-selection">
                    <div class="role-card student" onclick="document.getElementById('studentForm').submit();">
                        <i class="bi bi-person-circle icon"></i>
                        <h3>Student</h3>
                        <p>Submit and track complaints about campus facilities</p>
                        <form asp-action="SelectRole" asp-controller="Home" method="post" id="studentForm">
                            <input type="hidden" name="role" value="student" />
                            <button type="submit" class="btn">
                                <i class="bi bi-box-arrow-in-right"></i> Enter as Student
                            </button>
                        </form>
                    </div>
                    
                    <div class="role-card admin" onclick="document.getElementById('adminForm').submit();">
                        <i class="bi bi-shield-check icon"></i>
                        <h3>Admin</h3>
                        <p>Manage and resolve student complaints</p>
                        <form asp-action="SelectRole" asp-controller="Home" method="post" id="adminForm">
                            <input type="hidden" name="role" value="admin" />
                            <button type="submit" class="btn">
                                <i class="bi bi-gear-fill"></i> Enter as Admin
                            </button>
                        </form>
                    </div>
                </div>
                
                <div class="features">
                    <h4><i class="bi bi-star-fill"></i> System Features</h4>
                    <div class="feature-list">
                        <span class="feature-badge"><i class="bi bi-pencil-square"></i> Submit Complaints</span>
                        <span class="feature-badge"><i class="bi bi-incognito"></i> Anonymous Option</span>
                        <span class="feature-badge"><i class="bi bi-heart"></i> Like & Support</span>
                        <span class="feature-badge"><i class="bi bi-chat-dots"></i> Comments</span>
                        <span class="feature-badge"><i class="bi bi-check-circle"></i> Track Status</span>
                        <span class="feature-badge"><i class="bi bi-speedometer2"></i> Admin Dashboard</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>