@model List<ComplaintManagementSystem.Models.Complaint>
@{
    ViewData["Title"] = "All Complaints";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ðŸ“¢ Campus Complaints</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Submit Complaint
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filter by Category</label>
                    <select name="category" class="form-select" onchange="this.form.submit()">
                        <option value="">All Categories</option>
                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat" selected="@(cat == ViewBag.SelectedCategory)">@cat</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filter by Status</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Status</option>
                        <option value="Pending" selected="@("Pending" == ViewBag.SelectedStatus)">Pending</option>
                        <option value="InProgress" selected="@("InProgress" == ViewBag.SelectedStatus)">In Progress</option>
                        <option value="Resolved" selected="@("Resolved" == ViewBag.SelectedStatus)">Resolved</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Clear Filters</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Complaints List -->
    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <h4>No complaints found</h4>
            <p>Be the first to submit a complaint!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var complaint in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@complaint.Category</span>
                            <span class="badge @(complaint.Status == ComplaintManagementSystem.Models.ComplaintStatus.Resolved ? "bg-success" : complaint.Status == ComplaintManagementSystem.Models.ComplaintStatus.InProgress ? "bg-warning" : "bg-secondary")">
                                @complaint.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@complaint.Title</h5>
                            <p class="card-text">@complaint.Description</p>
                            <div class="text-muted small">
                                <i class="bi bi-person"></i> @complaint.StudentName
                                <span class="ms-3"><i class="bi bi-calendar"></i> @complaint.SubmittedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <button class="btn btn-sm btn-outline-danger like-btn" data-id="@complaint.Id">
                                <i class="bi bi-heart"></i> <span class="like-count">@complaint.LikesCount</span>
                            </button>
                            <span class="badge bg-info">
                                <i class="bi bi-chat"></i> @complaint.Comments.Count Comments
                            </span>
                            <a asp-action="Details" asp-route-id="@complaint.Id" class="btn btn-sm btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Handle like button clicks
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const complaintId = this.dataset.id;
                fetch('/Complaints/ToggleLike', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: complaintId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.querySelector('.like-count').textContent = data.likesCount;
                        this.classList.toggle('btn-outline-danger');
                        this.classList.toggle('btn-danger');
                    }
                });
            });
        });
    </script>
}